<UserControl x:Class="Pizzeria.View.PizzaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizzeria.View"
             xmlns:viewmodels="clr-namespace:Pizzeria.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewmodels:PizzaViewModel/>
    </UserControl.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Page Title -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Background="black" Text="Pizza Beheer - Creëer of Bewerk Pizza's" 
                   FontSize="24" FontWeight="Bold" Foreground="Tomato" HorizontalAlignment="Center" Margin="10" />

        <!-- Nieuwe Pizza Toevoegen -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10" Background="#CCEEEEEE" Width="400" Height="400">
            <TextBlock Text="Nieuwe Pizza Toevoegen" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10" />

            <TextBlock Text="Naam:" FontWeight="Bold" />
            <TextBox Text="{Binding NewPizza.Naam}" Width="200" Margin="0,5" />

            <TextBlock Text="Beschrijving:" FontWeight="Bold" />
            <TextBox Text="{Binding NewPizza.Beschrijving}" Width="200" Margin="0,5" />

            <TextBlock Text="Prijs:" FontWeight="Bold" />
            <TextBox Text="{Binding NewPizza.Prijs}" Width="200" Margin="0,5" />

            <TextBlock Text="Afbeelding:" FontWeight="Bold" />
            <Button Content="Afbeelding" 
                    Command="{Binding SelectImageCommand}" 
                    HorizontalAlignment="Left" 
                    Margin="0,5" 
                    Background="#FF8C00" 
                    Foreground="White" />

            <Button Content="Toevoegen"
                    Command="{Binding CreatePizzaCommand}"
                    HorizontalAlignment="Center"
                    Margin="10"
                    Background="#28a745"
                    Foreground="White" />
        </StackPanel>

        <!-- Geselecteerde Pizza Bewerken -->
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10" Background="#CCEEEEEE" Width="400" Height="400">
            <TextBlock Text="Geselecteerde Pizza Bewerken" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10" />

            <TextBlock Text="Naam:" FontWeight="Bold" />
            <TextBox Text="{Binding SelectedPizza.Naam}" Width="200" Margin="0,5" />

            <TextBlock Text="Beschrijving:" FontWeight="Bold" />
            <TextBox Text="{Binding SelectedPizza.Beschrijving}" Width="200" Margin="0,5" />

            <TextBlock Text="Prijs:" FontWeight="Bold" />
            <TextBox Text="{Binding SelectedPizza.Prijs}" Width="200" Margin="0,5" />

            <TextBlock Text="Afbeelding:" FontWeight="Bold" />
            <Button Content="Afbeelding"
                    Command="{Binding SelectImageCommand}"
                    HorizontalAlignment="Left"
                    Margin="0,5"
                    Background="#FF8C00"
                    Foreground="White" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Bewerken"
                        Command="{Binding UpdatePizzaCommand}"
                        Width="100"
                        Margin="5"
                        Background="#ffc107"
                        Foreground="Black" />
                <Button Content="Verwijderen"
                        Command="{Binding DeletePizzaCommand}"
                        Width="100"
                        Margin="5"
                        Background="#dc3545"
                        Foreground="White" />
            </StackPanel>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid ItemsSource="{Binding Pizzas}" 
                  SelectedItem="{Binding SelectedPizza}" 
                  AutoGenerateColumns="False" 
                  Grid.Row="2" 
                  Grid.ColumnSpan="2"
                  Margin="10" 
                  IsReadOnly="True"
                  Width="800" 
                  Height="200"
                  ScrollViewer.VerticalScrollBarVisibility="Auto"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Naam" Binding="{Binding Naam}" Width="200" />
                <DataGridTextColumn Header="Beschrijving" Binding="{Binding Beschrijving}" Width="300" />
                <DataGridTextColumn Header="Prijs" Binding="{Binding Prijs}" Width="100" />
                <DataGridTextColumn Header="Afbeelding" Binding="{Binding Image.Length}" Width="100" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
