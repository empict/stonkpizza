<UserControl x:Class="Pizzeria.View.ContactPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:view="clr-namespace:Pizzeria.View" 
             xmlns:viewmodels="clr-namespace:Pizzeria.ViewModel"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.DataContext>
        <viewmodels:ContactPageViewModel/>
    </UserControl.DataContext>

    <!-- Layout -->
    <Grid Background="#2B2B2B">
        <!-- Semi-transparante achtergrond voor contactinformatie -->
        <Border Background="#FF444444" CornerRadius="10" Padding="30" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <!-- Titel -->
                <TextBlock Text="Contact Informatie" FontSize="36" FontWeight="Bold" Foreground="#FFD700" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Contact details -->
                <StackPanel>
                    <TextBlock Text="Naam:" FontSize="18" FontWeight="Bold" Foreground="#FFFFFF"/>
                    <TextBlock Text="{Binding Naam}" FontSize="16" Foreground="#DDDDDD" Margin="0,0,0,10"/>

                    <TextBlock Text="Beschrijving:" FontSize="18" FontWeight="Bold" Foreground="#FFFFFF"/>
                    <TextBlock Text="{Binding Leeftijd}" FontSize="16" Foreground="#DDDDDD" Margin="0,0,0,10"/>

                    <TextBlock Text="E-mail:" FontSize="18" FontWeight="Bold" Foreground="#FFFFFF"/>
                    <TextBlock Text="{Binding Gmail}" FontSize="16" Foreground="#DDDDDD" Margin="0,0,0,20"/>
                </StackPanel>

                <!-- Bedankbericht -->
                <TextBlock Text="We kijken uit naar uw contact!" FontSize="14" FontStyle="Italic" Foreground="#AAAAAA" HorizontalAlignment="Center"/>

                <!-- Contact button -->
                <Button Content="Neem Contact Op" Margin="0,20,0,0" Padding="10,5" Background="#FFD700" Foreground="#000000" FontSize="16" FontWeight="Bold" Width="200" HorizontalAlignment="Center" Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
